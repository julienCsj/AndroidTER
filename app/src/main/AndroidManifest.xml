<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.m2dl.challenge.challengeandroid">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera.front" android:required="false" />
    <uses-feature android:name="android.hardware.sensor.gyroscope" android:required="true" />


    <meta-data android:name="AA_DB_NAME" android:value="TerChallenge.db" />
    <meta-data android:name="AA_DB_VERSION" android:value="1" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.JeuActivity" />
        <activity android:name=".Activity.ScoreActivity" />
        <activity android:name=".Activity.OptionsActivity"></activity>
        <activity android:name=".Service.TakePicture"></activity>

    </application>

</manifest>
